  "distribution": {
    "methods": [
      {
        "method": "cookiecutter",
        "description": "Use Cookiecutter to generate from templates",
        "command": "cookiecutter gh:IAmJonoBo/Agentic-Canon --directory=templates/{template-id}"
      },
      {
        "method": "tiged",
        "description": "Use tiged to extract template subdirectories",
        "command": "npx tiged IAmJonoBo/Agentic-Canon/templates/{template-id} target/"
      },
      {
        "method": "sparse-checkout",
        "description": "Use Git sparse-checkout for partial clone",
        "commands": [
          "git clone --filter=blob:none --no-checkout https://github.com/IAmJonoBo/Agentic-Canon.git",
          "cd Agentic-Canon",
          "git sparse-checkout init --cone",
          "git sparse-checkout set templates/{template-id}",
          "git checkout main"
        ]
      },
      {
        "method": "github-releases",
        "description": "Download from GitHub Releases (when available)",
        "command": "gh release download {tag} --pattern 'template-{template-id}.zip'"
      }
    ]
  },
