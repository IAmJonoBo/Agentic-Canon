# syntax=docker/dockerfile:1

FROM golang:1.22 AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /bin/grpc-service ./cmd/server

FROM gcr.io/distroless/base-debian12
COPY --from=builder /bin/grpc-service /usr/local/bin/grpc-service
EXPOSE 9090 8080
ENTRYPOINT ["/usr/local/bin/grpc-service"]
