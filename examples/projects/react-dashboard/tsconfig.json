{
  "compilerOptions": {
    "target": "ES2022", // Latest stable ECMAScript target
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"], // Updated to ES2022
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "NodeNext", // NodeNext is current best for modern projects
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "ignoreDeprecations": "6.0" // Silences deprecation warnings for future compatibility
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
