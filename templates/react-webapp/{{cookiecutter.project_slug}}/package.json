{
  "name": "{{cookiecutter.project_slug}}",
  "private": true,
  "version": "0.1.0",
  "description": "{{cookiecutter.description}}",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    {% if cookiecutter.include_e2e_tests == "yes" %}
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    {% endif %}
    {% if cookiecutter.include_storybook == "yes" %}
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    {% endif %}
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vitest": "^1.2.0"{% if cookiecutter.include_e2e_tests == "yes" %},
    "@playwright/test": "^1.41.0"{% endif %}{% if cookiecutter.include_storybook == "yes" %},
    "@storybook/react-vite": "^7.6.0",
    "@storybook/addon-essentials": "^7.6.0"{% if cookiecutter.enable_accessibility_tests == "yes" %},
    "@storybook/addon-a11y": "^7.6.0"{% endif %}{% endif %}
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
